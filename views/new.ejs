<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">
        New Post
    </div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label for="title">Post title</label>
            <input type="text" id="title" name="blog[title]" placeholder="My awesome post" required>
        </div>
        <div class="field">
            <label for="content">Post content</label>
            <textarea id="content" name="blog[content]" placeholder="Your post goes here..." required></textarea>
        </div>
        <div class="field">
            <label for="img">Post image</label>
            <input type="text" id="img" name="blog[image]" placeholder="https://picsum.photos/200/300" required>
        </div>
        <button class="ui button basic pink" type="submit">Submit</button>    
    </form>
    
</div>


<% include partials/footer %>