<% include partials/header %>

<h1>Latest Posts</h1>


<!--Loop through and display blog post-->
<% blogs.forEach( blog => { %>
    <div>
        <h2><%= blog.title %></h2>
        <span>Written on <%= blog.created.toDateString() %></span>
        <img src="<%= blog.image %>" alt="some alt tag" class="ui rounded medium image">
        <p><%= blog.content.substring(0, 100) %> ... </p>
        <a href="/blogs/<%= blog._id %>">Read more</a>
    </div>

<% }); %>

<% include partials/footer %>






